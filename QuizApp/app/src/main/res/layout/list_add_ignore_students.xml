<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/list_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_item_add_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/list_item_add_btn" />

    <ImageButton
        android:id="@+id/list_item_ignore_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:contentDescription="desc"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/list_item_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/list_item_ignore_btn"
        android:layout_toStartOf="@+id/list_item_ignore_btn"
        android:background="@null"
        android:contentDescription="desc"
        app:srcCompat="@android:drawable/ic_input_add" />

</RelativeLayout>