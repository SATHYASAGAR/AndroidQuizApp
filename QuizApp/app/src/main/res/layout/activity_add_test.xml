<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.esha.quizapp.AddTestActivity">

    <TextView
        android:id="@+id/infoAddTestId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="@string/addtest"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/testNameId"
        android:layout_alignStart="@+id/testNameId" />

    <TextView
        android:id="@+id/testNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:text="@string/testname"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_below="@+id/infoAddTestId"
        android:layout_alignRight="@+id/dateScheduledId"
        android:layout_alignEnd="@+id/dateScheduledId"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />

    <EditText
        android:id="@+id/nameOfTestId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/testname"
        android:inputType="text"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/testNameId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp" />

    <Button
        android:id="@+id/addTestButtonid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="@string/addtest"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/testNameId"
        android:layout_alignStart="@+id/testNameId" />

    <TextView
        android:id="@+id/dateScheduledId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameOfTestId"
        android:layout_alignStart="@+id/nameOfTestId"
        android:layout_below="@+id/nameOfTestId"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="52dp"
        android:text="@string/dateScheduledText"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <EditText
        android:id="@+id/dateScheduledInputId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/datescheduled"
        android:inputType="textPersonName"
        android:layout_above="@+id/addTestButtonid"
        android:layout_alignLeft="@+id/nameOfTestId"
        android:layout_alignStart="@+id/nameOfTestId"
        android:layout_marginBottom="38dp" />
</RelativeLayout>
